<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CDS.Views.LoginPage"
             NavigationPage.HasNavigationBar="False"    
             BackgroundImage="fon.png"
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="Center" Margin="20">
                <Label 
                Text="Ingrese sus credenciales"
                HorizontalOptions="Center"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Large"
                   />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Image
                    WidthRequest="15"
                    HeightRequest="15"
                    Source="usu"
                    Grid.Column="0"
                    Grid.Row="0"/>
                    <Label
                    Text="Usuario"
                    VerticalOptions="Center"
                    TextColor="White"
                    FontSize="15"
                    Grid.Column="1"
                    Grid.Row="0"
                    />
                    <Entry
                    Placeholder="Ej. FGKSA00003"
                    PlaceholderColor="#002361"
                    TextColor="#002361"
                    Text="{Binding nombreLogin}"
                    x:Name="user"
                    BackgroundColor="White"
                    Grid.Column="2"
                    Grid.Row="0"
                    />
                    <Image
                    WidthRequest="15"
                    HeightRequest="15"
                    Source="contra"
                    Grid.Column="0"
                    Grid.Row="1"/>
                    <Label
                    Text="Contraseña"
                    VerticalOptions="Center"
                    TextColor="White"
                    FontSize="15"
                    Grid.Column="1"
                    Grid.Row="1"
                    />
                    <Entry
                    Placeholder="Ingrese su contraseña"
                    PlaceholderColor="#002361"
                    TextColor="#002361"
                    x:Name="pass"
                    Text="{Binding password}"
                    BackgroundColor="White"
                    IsPassword="True"
                    Grid.Column="2"
                    Grid.Row="1"
                    />
                </Grid>
                <Label Text="Olvide mi contraseña" TextColor="White" FontAttributes="Bold" HorizontalOptions="Center"/>
                <StackLayout Orientation="Horizontal">
                    <Label HorizontalOptions="StartAndExpand" Text="Recordar contraseña" TextColor="White"/>
                    <Switch HorizontalOptions="End" IsToggled="{Binding IsRemembered, Mode=TwoWay}"></Switch>
                </StackLayout>
                <Button
                Text="Ingresar"
                Command="{Binding Ingresar}"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="White"
                BorderWidth="1"
                BorderRadius="10"
                />
                <Button
                Text="Salir"
                Command="{Binding SalirCommand}"
                TextColor="White"
                BackgroundColor="Transparent"
                BorderColor="White"
                BorderWidth="1"
                BorderRadius="10"
                IsEnabled="{Binding IsEnabled, Mode=TwoWay}"    
                />
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>