<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CDS.Views.horariosc5"
             Title="Horarios">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Listhorario" HasUnevenRows="True"
                  ItemTapped="Listhorario_ItemTapped"
                  Refreshing="Listhorario_Refreshing">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding foto}" Text="{Binding Nombrem}" Detail="{Binding Docente }" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>